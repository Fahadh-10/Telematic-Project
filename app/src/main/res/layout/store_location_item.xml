<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/location"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/profileIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fullAddressTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter"
        android:gravity="start"
        android:maxLines="2"
        android:text="@string/location"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/locationTV"
        app:layout_constraintStart_toStartOf="@+id/locationTV"
        app:layout_constraintTop_toBottomOf="@+id/locationTV" />

    <TextView
        android:id="@+id/dateTimeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/location"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/locationTV"
        app:layout_constraintStart_toStartOf="@+id/locationTV"
        app:layout_constraintTop_toBottomOf="@+id/fullAddressTV" />


    <ImageView
        android:id="@+id/profileIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/check_icon"
        app:layout_constraintBottom_toTopOf="@+id/fullAddressTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/locationTV" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/ice_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeTV" />

</androidx.constraintlayout.widget.ConstraintLayout>